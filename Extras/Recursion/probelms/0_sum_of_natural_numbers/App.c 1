#include<iostream>

using namespace std;


int sum(int n){
     
    if(n>0){
        return sum(n-1)+n;
    }else{
        return 0;
    };

};

int main(){
    int num = 0;
    cout<<"Enter the number: "<<endl;
    cin>>num;

    int result = sum(num);
    cout<<"The of natural number till "<<num<<" is: "<<result<<endl;
    return 0;
}