#include<iostream>
using namespace std;

struct Array{
    int *pointer;// The pointer to the heap to access the arrray
    int size ;// Array size
    int length;// Length of the array 

};
void Display(Array arr){
    for(int i =0;i<=arr.length;i++){
        cout<<"Element at index"<<i<<":"<<arr.pointer[i]<<endl;
    }

}




int main(){
    Array arr ;
    int n,i;
    cout<<"Enter the size of the array";
    cin>>arr.size;
    arr.pointer = new int[arr.size];
    arr.length = 0;
    cout<<"Enter how many number";
    cin>>n;

    cout<<"Enter all numbers";
    for(i=0; i<n;i++){
        cin>>arr.pointer[i];
    }
    arr.length = n;
    Display(arr);


    return 0;
}